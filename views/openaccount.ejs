<%- include("partials/header",{id:id ? id:null, record: record ? record : null}) %>

  <head>
    <script src="/javascripts/openaccount.js" type="text/javascript"></script>
  </head>

  <div class="container w-75 mx-auto my-2">
    <div class="my-5 mx-auto text-center">
      <!-- <h3>Create Account</h3> width: 75% !important; height: 50% !important; -->
      <!-- <i class="fas fa-money-check-alt" style="font-size: 10vh; color: gold;"></i> -->
      <i class="fas fa-rupee-sign" style="font-size: 10vh; color: gold;"></i>
    </div>
    <form onsubmit="return myfunc()" action="/account/create_acc" method="POST">
      <div class="row w-100 text-center mx-auto my-1">
        <div class="col-6 text-center mx-auto my-1">
          <div class="form-group w-100 mx-auto my-3">
            <input type="text" class="form-control" placeholder="Name" name="name" value="<%=record.name%>">
          </div>
        </div>
        <div class="col-6 text-center mx-auto my-1">
          <div class="form-group w-100 mx-auto my-3">
            <input type="text" class="form-control" placeholder="Address" name="address">
          </div>
        </div>
      </div>
      <div class="row w-100 text-center mx-auto my-1">
        <div class="col-6 text-center mx-auto my-1">
          <div class="form-group w-100 mx-auto my-3">
            <input type="text" class="form-control" placeholder="Email" name="email" value="<%=record.email%>">
          </div>
        </div>
        <div class="col-6 text-center mx-auto my-1">
          <div class="w-100 mx-auto my-3">
            <select class="form-select" name="gender">
              <option value="none" selected disabled hidden>Gender</option>
              <option value="male" >Male</option>
              <option value="female" >Female</option>
              <option value="other" >Other</option>
            </select>
          </div>
        </div>
      </div>
      <div class="row w-100 text-center mx-auto my-1">
        <div class="col-6 text-center mx-auto my-1">
          <div class="row w-100 mr-auto my-3">
            <div class="col-4">
              <select class="form-select" name="contactm1">
                <option value="none" selected disabled hidden>Country Code</option>
                <%for(let i=0;i<codes.length;i++) {%>
                  <option value="<%=codes[i].dial_code%>">
                    <%=codes[i].code + ' | ' + codes[i].dial_code%>
                  </option>
                  <%}%>
              </select>
            </div>
            <div class="col-8 form-group">
              <input type="tel" class="form-control" pattern="{1}(7,8,9){9}[0-9]" placeholder="Mobile No."
                name="Mobileno1" required>
            </div>
          </div>
        </div>
        <div class="col-6 text-center mx-auto my-1">
          <div class="row w-100 mr-auto my-3">
            <div class="col-4">
              <select class="form-select" name="contactm2">
                <option value="none" selected disabled hidden>Country Code</option>
                <%for(let i=0;i<codes.length;i++) {%>
                  <option value="<%=codes[i].dial_code%>">
                    <%=codes[i].code + ' | ' + codes[i].dial_code%>
                  </option>
                  <%}%>
              </select>
            </div>
            <div class="col-8 form-group">
              <input type="tel" class="form-control" pattern="{1}(7,8,9){9}[0-9]" placeholder="Alternate Mobile No."
                name="Mobileno2" required>
            </div>
          </div>
        </div>
      </div>
      <div class="row w-100 text-center mx-auto my-1">
        <div class="col-6 text-center mx-auto my-1">
          <div class="form-group w-100 mx-auto my-4">
            <input type="tel" class="form-control" pattern="{1}(7,8,9){9}[0-9]" placeholder="Phone No." name="Phoneno">
          </div>
        </div>
        <div class="col-6 text-center mx-auto my-1"></div>
      </div>
  </div>
  <div class="w-50 mx-auto my-5 text-center">
    <button class="btn btn-lg btn-success" style="width: 74% !important;">Create Account</button>
  </div>
  </form>
  </div>

  <%- include("partials/footer") %>