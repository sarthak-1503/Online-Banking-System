<%- include("partials/header",{id:id ? id:null}) %>

    <head>
        <link rel="stylesheet" href="/stylesheets/login.css">
    </head>

    <%if(lastUrl == '/auth/signup') {%>
        <script>
            $(document).ready(()=> {
                alert('Please login now!');
            });
        </script>
    <%}%>


    <div class="container" style="bottom: 2rem;">

        <div style="font-size: 10rem; margin: auto;">
            <i class="fas fa-user-circle" style="color: #007bff;"></i>
        </div>

        <div class="container contain-form">

            <form action="/auth/login" method="POST" class="form-components">
                <div class="form-group w-75">
                  <input type="email" class="form-control" name="Email" placeholder="Email ID" required>
                </div>
                <div class="form-group w-75">
                  <input type="password" class="form-control" placeholder="Password" name="p1"  minlength="8"
                  maxlength="16" size="16" pattern="^(?=.{5,}$)(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.*\W).*$"
                  title="Password must follow the criteria:
                      1. atleast 8 characters long
                      2. atleast 1 uppercase letter
                      3. atleast 1 lowercase letter
                      4. atleast 1 special character " required>
                </div>
                <button type="submit" id="submit" class="btn btn-primary btn-lg">Submit</button>
              </form>

            <div class="createAccDiv">
                <!-- padding-right: 19rem; padding-left: 2.2rem; margin-top: 2rem; -->
                <a href="/auth/signup" id="createacc" style="font-size: 1.2rem;">Create Account</a>
            </div>
        </div>

    </div>


    <%- include("partials/footer") %>