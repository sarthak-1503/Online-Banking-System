<%- include("partials/header",{id:id ? id:null, record: record ? record : null}) %>

  <head>
    <script src="/javascripts/transaction.js" type="text/javascript"></script>
  </head>

  <div class="container text-center w-70 mx-auto h-100 p-3">
    <div class="text-center mx-auto my-5"">
      <h3>Make Transaction</h3>
    </div>
    <div>
      <form action="/account/view" method="POST">
        <div class="form-group text-center my-3 mt-5 mx-auto">
          <select name="trans_type" class="form-select mx-auto w-50">
            <option selected disabled>Select type of transaction</option>
            <option value="withdrawl">Withdrawl</option>
            <option value="deposit">Deposit</option>
          </select>
        </div>
        <div class="text-center my-3 mx-auto w-50">
          <input type="number" id="amt" class="form-control" placeholder="Amount" name="trans_amount">
        </div>
        <div>
          <button id="pay" class="btn btn-success btn-sm ml-auto mr-3">Confirm</button>
          <button id="cancel" formaction="/" formmethod="get" class="btn btn-danger btn-sm mr-auto ml-3">Cancel</button>
        </div>
      </form>
    </div>
  </div>


  <%- include("partials/footer") %>